body {
  margin 0;
  padding 0;
}

h1,h2,h3,h4,h5,h6 {
  padding 0;
  margin 0;
}

.menu-button {
  position fixed;
  top 20px;
  right 20px;
  height 65px;
  width 65px;
  background white;
  box-shadow 0 0 5px 1px rgba(0,0,0,0.1)
  border-radius 100%;
  transition 300ms;
  z-index 10000
  &:hover {
    box-shadow 0 0 10px 1px rgba(0,0,0,0.2)
    cursor pointer;
  }
}

.menu {
  position fixed;
  top 0;
  right -100vw;
  width 100%;
  height 100%;
  display block;
  z-index 10000

  > .backgr {
    background rgba(0,0,0,0.4);
    position absolute;
    top 0;
    left 0;
    width 100%;
    height 100%
  }

  > .content {
    position absolute;
    right -280px;
    width 280px;
    height 100vh;
    background white;
    animation-delay 300ms;

    > .head {
      height 50px;
      background whitesmoke;
      border-bottom 1px solid #d0d0d0;
    }

    > .control {
       > .button {
         display block;
         text-align center;
         height 45px;
         line-height 45px;
         text-decoration none;
         color #4d4d4d;
         background white;

         &:hover {
           cursor pointer;
           background whitesmoke;
         }
       }
    }
  }
}

.showMenu {
  animation menuShow 500ms forwards;
}

.showContent {
  animation contentShow 300ms forwards;
}

.hideMenu {
  animation menuHide 500ms forwards;
}

.hideContent {
  animation contentHide 300ms forwards;
}