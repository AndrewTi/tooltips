.tooltip {
  position fixed;
  width 250px;
  height 150px;
  display none;
  top 100px;
  left 20px;
  animation tooltipShow 300ms forwards;
  background #f6f6f6;
  box-shadow 0 0 20px 1px rgba(0,0,0,0.2);
  border-radius 6px;
  z-index 10;

  > .head {
    background white;
    border-radius 6px 6px 0 0;
    text-align center;
    width 100%;
    height 40px;
    border-bottom 2px solid lightcyan;
  }

  > .text {
    text-align center;
    padding 0 20px;
  }

  &:after {
    width 20px;
    height 20px;
    content: "";
    background white;
    position: absolute;
    transform rotate(45deg);
    box-shadow 0 0 20px 1px rgba(0,0,0,0.2);
    top: -10px;
    left calc(50% - 10px);
    z-index -10;
  }
}