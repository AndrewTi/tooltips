.home {
  min-height calc(100vh - 150px);
  background: linear-gradient(to bottom right, lightgreen, wheat);
  display flex;
  justify-content center;
  padding 30px 0 160px 0;

  > .content {
    max-width 1200px;
    width 100%;

    > .images {
      display flex;
      flex-wrap wrap;
      justify-content center;

      > .block-img {
        border-radius 6px;
        margin 15px 10px;
        overflow hidden;
        position relative;
        width 250px;
        height 300px;
        top 0px;
        background white;
        box-shadow 0 0 30px 1px rgba(0,0,0,0.3);
        transition 300ms;

        > .img {
          width 100%;
          height 100%
          object-fit cover;
        }

        &:hover {
          top -5px;
          box-shadow 0 0 100px 1px rgba(0,0,0,0.4);
          cursor pointer;
        }
      }
    }
  }
}